<h2>{{titulo}}</h2>
<div class="row mt-4">
    <div class="col-12">
        
        <div class="fw-bold">
            <span class="badge text-bg-danger">{{chave}}</span>
            <span class="badge text-bg-warning"><i class="bi bi-clock me-1"></i> {{tempo}} minutos</span>

        </div>
        
        <h5 class="mt-3"><i class="bi bi-egg-fried me-1"></i> Ingredientes</h5>
        <div class="alert alert-secondary p-4">
            <pre>{{ingredientes}}</pre>
        </div>

        <h5 class="mt-3"><i class="bi bi-fire me-1"></i> Preparo</h5>
        <div class="alert alert-secondary p-4">
            <pre>{{preparo}}</pre>
        </div>
    </div>
    <div class="col-6">
        <a href="/receita/deleta/{{chave}}" class="btn btn-sm btn-danger"><i class="bi bi-trash me-1"></i> Deletar</a>
        <a href="/receita/altera/{{chave}}" class="btn btn-sm btn-warning"><i class="bi bi-pen me-1"></i> Alterar</a>
    </div>
    <div class="col-6 text-end">
        <a href="/" class="btn btn-sm btn-primary"><i class="bi bi-box-arrow-left me-1"></i> Voltar</a>
    </div>
</div>